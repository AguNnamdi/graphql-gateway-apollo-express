{
  "name": "graphql-express-demo",
  "version": "1.0.0",
  "description": "graphql express demo for testing",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon -w server/ --exec 'NODE_ENV=development node server/'",
    "start": "NODE_ENV=production node server/",
    "apollo:download": "apollo service:download --endpoint http://localhost:3000/graphql schema.json",
    "apollo:generate:typescript": "apollo client:codegen types --clientName=local --service=graphql_gateway  --target=typescript",
    "apollo:generate:flow": "apollo client:codegen types --clientName=local --service=graphql_gateway --target=flow",
    "codegen:generate": "gql-gen -s schema.json -t ts --out types/generated.gen.ts",
    "codegen:resolvers": "gql-gen -t graphql-codegen-typescript-resolvers-template -s schema.json --out ./types/resolvers-types.ts",
    "codegen:react-apollo": "gql-gen -t graphql-codegen-typescript-react-apollo-template -s schema.json --out ./types/react-apollo.ts"
  },
  "keywords": ["graphql", "express"],
  "author": "David Mr√°z <david.mraz@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^2.0.4",
    "babel-polyfill": "^6.23.0",
    "babel-register": "^6.24.1",
    "express": "^4.15.3",
    "faker": "^4.1.0",
    "graphql": "14.0.2",
    "validator": "^8.0.0"
  },
  "devDependencies": {
    "apollo": "^2.0.5",
    "babel-eslint": "^7.2.3",
    "babel-preset-airbnb": "^2.4.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.1.1",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.7.0",
    "graphql-code-generator": "^0.13.0",
    "graphql-codegen-introspection-template": "^0.13.0",
    "graphql-codegen-typescript-react-apollo-template": "^0.13.0",
    "graphql-codegen-typescript-resolvers-template": "^0.13.0",
    "graphql-codegen-typescript-template": "^0.13.0",
    "nodemon": "^1.11.0"
  }
}
